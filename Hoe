import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {

  @override

  Widget build(BuildContext context) {

    return MaterialApp(

      home: Scaffold(

        body: Container(

          padding: EdgeInsets.all(20),

          child: Column(

            mainAxisAlignment: MainAxisAlignment.center,

            children: [

              TextField(

                decoration: InputDecoration(

                  hintText: "Enter text",

                ),

                onChanged: (value) {

                  setState(() {

                    _text = value;

                  });

                },

              ),

              SizedBox(

                height: 20,

              ),

              Container(

                width: double.infinity,

                child: RaisedButton(

                  shape: RoundedRectangleBorder(

                    borderRadius: BorderRadius.circular(20),

                  ),

                  onPressed: () {

                    setState(() {

                      _isVisible = true;

                    });

                  },

                  child: Text("Add"),

                ),

              ),

              SizedBox(

                height: 20,

              ),

              _isVisible

                  ? Container(

                      padding: EdgeInsets.all(20),

                      decoration: BoxDecoration(

                        borderRadius: BorderRadius.circular(20),

                        color: Colors.grey[200],

                      ),

                      child: Column(

                        children: [

                          Text(_text),

                          SizedBox(

                            height: 20,

                          ),

                          Container(

                            width: double.infinity,

                            child: RaisedButton(

                              shape: RoundedRectangleBorder(

                                borderRadius: BorderRadius.circular(20),

                              ),

                              onPressed: () {

                                setState(() {

                                  _isVisible = false;

                                });

                              },

                              child: Text("Close"),

                            ),

                          ),

                        ],

                      ),

                    )

                  : Container(),

            ],

          ),

        ),

      ),

    );

  }

}

